<!-- This page is a booking form partial to book a cleaner. It links each appointment to a particular user (in this case, cleaner) that is being booked -->

<!-- Pass the user that each appointment belongs to and the appointment details - @user is the parent and @user.appointments.new is the child -->

<%= form_for([@user, @user.appointments.new]) do |f| %>
<div class="form-group">
  Date: <%= f.text_field :date %>
  Time: <%= f.text_field :start_time %>
  Number of hours: <%= f.number_field :hours %>
</br>
</div>
  <%= f.submit "Book now", class: 'btn' %>
<% end %>

<!-- Run script so that jquery-ui datepicker works - allows a dropdown date picker -->
<script>
  $(function() {
    $('#appointment_date').datepicker({
      dateFormat: 'dd-mm-yy'
    });
  });
</script>
