<!-- This page provides a snapshot summary of a user's appointments. -->

<div class="row">
  <div class="col-md-5 center">
  </div>

  <div class="col-md-3 center">
    <div class="panel panel-default">
      <div class="panel-heading center">
        YOUR APPOINTMENTS
      <div class="panel-body">

<!-- Create card with the thumbnail shot of the user's home(s), as well as its listing name, address, hourly rate offered and buttons to edit, delete and view the home profile page -->

      <% @appointments.each do |appointment| %>
          <div class="card">
            <div>
              <%#= image_tag(appointment.home.image, class: 'avatar-medium') %>
            </div>

            <div class="card-body center">
              <h4 class="card-title center text-teal"><%= appointment.home.listing_name %></h4><br/>
              <p>Date: <%= appointment.date %></p>
              <!-- <p>Time: <%#= appointment.start_time %> - <%#= appointment.end_time %></p> -->
              <p>Cleaner: <%= link_to appointment.user.username, user_path(appointment.user) %></p>
              <!-- <p>Total price: $<%#= appointment.total_price %></p> -->
              <%# link_to "VIEW", home_path(home.id), class: "btn center" %>
            </div>
          </div>
      <% end %>

      </div>
    </div>
  </div>
</div>

<!-- Run script so that jquery-ui datepicker works - allows a dropdown date picker and a time picker -->
<script>
  $(function() {
    $('#date').datepicker({
      dateFormat: 'dd-mm-yy'
    });
  });

</script>

  </div>
