<!-- This page provides a snapshot summary of a user's appointments. -->
<div class="container">
<div class="row center">

  <div class="col-md-9">
    <div class="panel panel-default">
      <div class="panel-heading center">
        YOUR APPOINTMENTS
      <div class="panel-body">

<!-- Create card with the thumbnail shot of the user's home(s), as well as its listing name, address, hourly rate offered and buttons to edit, delete and view the home profile page -->
    <div class="row center">
      <% @appointments.each do |appointment| %>
          <div class="card center", style="width: 40%">
            <div>
              <%= image_tag(appointment.home.image_url, class: 'avatar-mid') %>
            </div>

            <div class="card-body center">
              <h4 class="card-title center text-teal">Cleaning: <%= appointment.home.listing_name %></h4><br/>
              <p>Date: <%= appointment.date %></p>
            </div>
          </div>
      <% end %>
    </div>

    <div class="row center">
      <% @bookings.each do |booking| %>
          <div class="card center", style="width: 40%">
            <div>
              <%= image_tag(booking.user.image_url, class: 'avatar-mid') %>
            </div>

            <div class="card-body center">
              <h4 class="card-title center text-teal">Cleaner: <%= link_to booking.user.username, user_path(booking.user) %></h4><br/>
              <p>Date: <%= booking.date %></p>
              <p>For: <%= booking.home.listing_name%></p>
            </div>
          </div>
      <% end %>
    </div>
    <div class="row">
      <% if !@appointments.empty? && !@bookings.empty? %>
        <div class="center"><br/>No appointments have been made.</div>
      <% end %>
    </div>
  </div>
</div>
</div>
</div>
</div>
</div>
