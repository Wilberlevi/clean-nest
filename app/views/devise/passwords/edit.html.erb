<div class="row align-items-center">
<div class="col-md-4 mx-auto">
<h2 class="text-center">Change your password</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render 'shared/devisemessage' %>
  <%= f.hidden_field :reset_password_token %>

  <div class="form-group">
    <%= f.password_field :password, autocomplete: "off", placeholder: "Password. Leave blank if you do not wish to change.", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.password_field :current_password, autocomplete: "off", placeholder: "Current Password", class: "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit "Change my password" %>
  </div>
<% end %>

</div>
</div>
