<div class="container">
  <div class="row">
    <div class="col-md-3">
      <div class="center">
          <div class="panel panel-button">
          <%= button_to 'View Profile', showuser_path(current_user.id), method: :get, class: 'btn center' %>
          </div>
          </div>
        </div>

    <div class="col-md-6 center">
      <h2 class="text-center"><br>Edit Profile</br></h2>
        <%= render 'shared/devisemessage' %>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

          Edit Avatar: <%= f.file_field :image, id: :image_data, class: "form-control" %>
        <div class="form-group">
          <%= f.text_field :firstname, autofocus: true, placeholder: "First Name", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.text_field :lastname, autofocus: true, placeholder: "Last Name", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.text_field :phone_number, autofocus: true, placeholder: "Phone Number", class: "form-control" %>
        </div>

        <!-- <div class="form-group">
          <%#= f.check_box :is_male %> Male
          <%#= f.check_box :is_female %> Female
        </div> -->

        <!-- <div class="field center">
        Male
        <%#= form.check_box :gender, id: :male %>
        Female
        <%#= form.check_box :gender, id: :female %>
        </div> -->

        <div class="form-group">
          <%= f.text_field :language, autofocus: true, placeholder: "Primary Language", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.text_field :location, autofocus: true, placeholder: "Location", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.text_area :bio, autofocus: true, placeholder: "Bio", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.email_field :email, autofocus: true, placeholder: "Email", class: "form-control"  %>
        </div>

        <div class="form-group">
          <%= f.password_field :password, autocomplete: "off", placeholder: "Password (leave blank if you do not wish to change)", class: "form-control" %>
        </div>

        <div class="form-group">
        Add identification: <%= f.file_field :identification, id: :identification_data, class: "form-control" %>
        </div>

        <div class="actions center">
          <%= f.submit "Update", class: 'btn btn-block center' %>
        </div>
      <% end %>
      <br><%= link_to "Back", :back, class: 'text-teal' %></br>
  </div>
  </div>
</div>
