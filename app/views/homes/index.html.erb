<div class="container">
<div class="row">

  <div class="col-md-3">
    <%= render 'layouts/user-sidebar' %>
  </div>
  <!-- Shows user's sidebar with home, appointments & account -->

  <div class="col-md-9">
    <div class="row center">
      <h1>HOMES</h1>
    </div>
  <!-- Row title "Homes" -->

    <div class="row center">
      <% @homes.each do |home| %>
        <div class="col-md-6">
          <div class="card">
            <div>
              <% if home.image.present? %>
                <%= image_tag home.image_url(:thumb), class: 'avatar-full' %>
              <% end %>

            </div>

          <div class="card-body">
            <h4 class="card-title center text-teal"><%= home.listing_name %></h4></br>
            <p>Address: <%= home.address %></p>
            <p>Hourly rate: $<%= home.hourly_rate %></p>
            <%= link_to "VIEW", home_path(home.id), class: "btn center" %>
            <%= link_to "EDIT", edit_home_path(home.id), action: :patch, class: "btn center" %>
          </div>
          </div>
        </div>
      <% end %>
    </div>

  </div>
</div>
</div>
