<!-- The home / index page -->

<!-- Index banner image -->
<div class="jumbotron jumbotron-fluid">
    <%= image_tag('banner.jpg', class: 'banner') %>
</div>

<!-- Search section - allows the user to search for cleaners based on location and date -->
<div class="jumbotron jumbotron-fluid background-teal">
<br/><br/><br/><br/>
<h1 class= "center text-white"> Looking for a cleaner? </h1>
<br/><br/>

<div class="container">
  <%= form_tag search_path, method: :get do %>
    <div class="row">
      <div class="col-md-6">
        <%= text_field_tag :search, params[:search], placeholder: "Enter your address", class: "form-control", id: "autolocation" %>
      </div>
      <div class="col-md-6">
        <%= text_field_tag :date, params[:date], placeholder: "Select a Date", class: "form-control datepicker" %>
      </div>
      </div>
    <br/><br/>

    <div class="row center">
        <%= submit_tag "Find a Cleaner", class: "btn-white" %>
    </div>
  <% end %>
</div>
<br/><br/><br/><br/>
</div>


<script>
  $('#date').datepicker({
    dateFormat: 'dd-mm-yy',
    minDate: 0,
    maxDate: '3m'
  });

// Trigger autolocation geocomplete (using geocomplete javascript)
$(document).ready(function() {
    $("#autolocation").geocomplete();
  })

</script>
